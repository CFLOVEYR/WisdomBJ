<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--请求父控件不拦截自己的自定义ViewPager-->
    <com.tofirst.study.zhbj.activity.view.NoHorizontalViewPager
        android:id="@+id/vp_newsdetail_tag"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#a000">

        <TextView
            android:id="@+id/tv_tagdetail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="新闻内容"
            android:textColor="#f00"
            android:textSize="18sp" />

        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/indicator_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="5dip"
            app:fillColor="@color/red"
            app:pageColor="@color/gray"
            app:radius="3dp"
            app:strokeWidth="0dp" />
    </RelativeLayout>

</RelativeLayout>